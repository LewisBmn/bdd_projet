<Window x:Class="bdd_projet.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bdd_projet"
        mc:Ignorable="d"
        Title="Start" Height="450" Width="800"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStyle="None"
        Icon="Assets/velo-de-route.ico"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    
    <Grid Background="#F0F0F0" x:Name="Grid">
        <TextBlock FontFamily="Trebuchet MS"
                   FontSize="20"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            Souhail Ait Lahcen, Achirafi Ahmed et Lewis Baumann
        </TextBlock>
        <TextBlock FontFamily="Trebuchet MS"
                   FontSize="20"
                   Margin="0,35,0,0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            vous présentent
        </TextBlock>
        <Frame x:Name="frame"  Height="450" Width="800" Panel.ZIndex="0"/>
    </Grid>
</Window>
